<?xml version="1.0" encoding="UTF-8"?>


<hibernate-configuration>
	<session-factory>

		<property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
		<property name="hibernate.connection.url">jdbc:oracle:thin:@ 192.168.0.107:1521:XE
		</property>
		<property name="hibernate.connection.username">system</property>
		<property name="hibernate.connection.password">admin</property>

		<!-- Specify the dialect based on your MySQL version -->
		<property name="hibernate.dialect">org.hibernate.dialect.OracleDialect</property>

		<!-- Optional settings -->
		<property name="hibernate.hbm2ddl.auto">update</property> <!-- Schema update, can be 'create', 'update', or 'validate' -->
		<property name="hibernate.show_sql">true</property> <!-- Show SQL in logs -->
		<property name="format_sql">true</property>

		<mapping class="com.dss.airport.entity.AirportEntity"></mapping>


	</session-factory>
</hibernate-configuration>